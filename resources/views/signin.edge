<!DOCTYPE html>
<html lang="id">
<head>
	<meta charset="UTF-8" />
	<title>Login Page</title>
	<!-- import font dan css -->
	{{ style('style') }}
	<script src="https://kit.fontawesome.com/8cb74416b1.js" crossorigin="anonymous"></script>
</head>
<body>
	<header>
		<div class="header-container">
			<h1><a href="/">
				<img src="img/logo2.png">
			</a></h1>
			<ul>
				<li>
                    <a href="/">
					    <input type="submit" name="submit" value="Sign In" class="button">
				    </a>
                </li>
			</ul>
		</div>
	</header>

	<section class="main-container">
		<div class="login-container">
			<div class="login-form">
				<div class="login-detail">
					<img src="img/logo.png">
					<div class="login-nav-item">
                        <nav>
                            <a href="/signin">Sign In</a>
						    <a href="/signup">Sign Up</a>
                        </nav>						
					</div>
				</div>
				<div class="login-form-section">
					<h1>Sign In</h1>
					<p>Sign In Untuk Melanjutkan Ke Aplikasi</p>
					<form action="/signin" method="post">
						<div class="input-container">
							<input type="text" name="username" class="input" placeholder="Username">
							<i class="fa-solid fa-user"></i>
						</div>
						<div class="input-container">
							<input type="password" name="password" class="input" placeholder="Password">
							<i class="fa fa-unlock-alt"></i>
						</div>
						<a href="/beranda">
							<div class="button-container">
								<input type="submit" name="submit" value="Sign In" class="button">
							</div>
						</a>						
					</form>
				</div>
			</div>
			<div class="login-image">
				<div class="circle-1"></div>
				<div class="circle-2"></div>
				<img src="img/img1.png" alt="Login icon">
			</div>
		</div>
	</section>

	<footer>
		<div class="footer-container">
			<small>Copyright &copy; 2022 BK Sekolah</small>
		</div>
	</footer>
</body>
</html>